<%- model_class = Dietplan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @dietplan.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recipy_id) %>:</strong></dt>
  <dd><%= @dietplan.recipy_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:step_id) %>:</strong></dt>
  <dd><%= @dietplan.step_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @dietplan.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              dietplans_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dietplan_path(@dietplan), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dietplan_path(@dietplan),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
