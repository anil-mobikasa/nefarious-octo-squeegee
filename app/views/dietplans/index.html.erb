<%- model_class = Dietplan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:recipy_id) %></th>
      <th><%= model_class.human_attribute_name(:step_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @dietplans.each do |dietplan| %>
      <tr>
        <td><%= link_to dietplan.id, dietplan_path(dietplan) %></td>
        <td><%= dietplan.title %></td>
        <td><%= dietplan.recipy_id %></td>
        <td><%= dietplan.step_id %></td>
        <td><%= dietplan.user_id %></td>
        <td><%=l dietplan.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_dietplan_path(dietplan), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      dietplan_path(dietplan),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @dietplans %></br>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_dietplan_path,
            :class => 'btn btn-primary' %>
