<%= form_for @dietplan, :html => { :class => "form-horizontal dietplan" } do |f| %>

    <% if @dietplan.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dietplan.errors.count, "error") %> prohibited this dietplan from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dietplan.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@dietplan[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :recipy_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :recipy_id, :class => 'form-control' %>
    </div>
    <%= error_span(@dietplan[:recipy_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :step_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :step_id, :class => 'form-control' %>
    </div>
    <%= error_span(@dietplan[:step_id]) %>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.hidden_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@dietplan[:user_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            dietplans_path, :class => 'btn btn-default' %>

<% end %>
