<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-sm-8 banner"><%= image_tag("banner.jpg", alt:"", width: "100%") %></div>
  <div class="col-sm-4">
    <div class="col-sm-12 bannerform">
      <p>Start living healthier!<br/>
        <span>Sign Up or Login In to you account.</span>
      </p>
      <div class="col-xs-12 nopadding"><%= f.email_field :email, autofocus: true, :placeholder => "Email Address" %><br /></div>
      <div class="col-xs-12 nopadding"><%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %></div>
      <div class="col-xs-6 nopaddingl"><%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= button_to "Sign up", new_registration_path(resource_name), :class => 'col-xs-6 nopaddingl' %><br />
        <% end -%>
      </div>
      <div class="col-xs-6 nopaddingr"><%= f.submit "Log in" %></div>
      <div class="clear"></div>
      <p class="signing"><%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Need help signing in?", new_password_path(resource_name) %><br />
        <% end -%></p>

      </div>
    </div>
    <% end %>
  </div>