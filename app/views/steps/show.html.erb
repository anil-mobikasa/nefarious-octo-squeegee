<%- model_class = Step -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:step_number) %>:</strong></dt>
  <dd><%= @step.step_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instruction) %>:</strong></dt>
  <dd><%= @step.instruction %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              steps_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_step_path(@step), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              step_path(@step),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
